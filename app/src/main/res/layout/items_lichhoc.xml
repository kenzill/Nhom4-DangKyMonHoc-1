<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/custom_cartlist"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNganhHoc"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Nganh Hoc"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvLopHoc"
            android:text="Lop Hoc"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:padding="25dp"
            android:textColor="#FFF"
            android:background="@drawable/custom_lophoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvNgayHoc"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="MM-DD-YY"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCaHoc"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Ca Hoc"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvGiangVien"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Giang Vien"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>