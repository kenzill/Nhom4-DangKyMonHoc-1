<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/designMainColor"
        app:cardCornerRadius="16dp">

        <TextView
            android:id="@+id/tvLopHoc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:textStyle="bold"
            android:textColor="@color/miniTitle"
            android:maxWidth="70dp"
            android:padding="20dp"
            android:text="Lop Hoc"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenMonHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Môn Học "
            android:textColor="@color/miniTitle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />
        <TextView
            android:id="@+id/tvGiangVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giảng Viên "
            android:textColor="@color/miniTitle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />
        <TextView
            android:id="@+id/tvCaHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ca Học "
            android:textColor="@color/miniTitle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />


    </LinearLayout>

</LinearLayout>